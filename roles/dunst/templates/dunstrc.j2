[global]
font = MesloLGM Nerd Font Mono 11

markup = yes
plain_text = no

format = "<b>%s</b>\n%b"

sort = no
indicate_hidden = yes

alignment = center

bounce_freq = 0

show_age_threshold = -1

word_wrap = yes

ignore_newline = no

stack_duplicates = yes
hide_duplicate_count = yes

geometry = "300x50-15+49"

shrink = no

transparency = 5

idle_threshold = 0

monitor = 0

follow = none

sticky_history = yes

history_length = 15

show_indicators = no

line_height = 3

separator_height = 2

padding = 6

startup_notification = false

dmenu = dmenu -p dunst:

browser = firefox -new-tab

icon_position = off
max_icon_size = 80

icon_path = icon_path = /usr/share/icons/Paper/16x16/mimetypes/:/usr/share/icons/Paper/48x48/status/:/usr/share/icons/Paper/16x16/devices/:/usr/share/icons/Paper/48x48/notifications/:/usr/share/icons/Paper/48x48/emblems/

frame_width = 3

frame_color = "#8AADF4"
separator_color= frame

[shortcuts]
close = ctrl+space
close_all = ctrl+shift+space
history = ctrl+grave
context = ctrl+shift+period

[urgency_low]
background = "#24273A"
foreground = "#CAD3F5"

[urgency_normal]
background = "#24273A"
foreground = "#CAD3F5"

[urgency_critical]
background = "#24273A"
foreground = "#CAD3F5"
frame_color = "#F5A97F"
